<?xml version="1.0" encoding="UTF-8"?>
<hibernate-configuration>
    <session-factory>
        <!-- JDBC connection settings -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/JDBC_Learning</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">123456</property>

        <!-- SQL dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>

        <!-- Echo SQL to console -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="use_sql_comments">true</property>

        <!-- Drop and create schema at startup -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Mapping entities -->
        <mapping class="com.techouts.entities.User" />
        <mapping class="com.techouts.entities.Cart" />
        <mapping class="com.techouts.entities.CartItem" />
        <mapping class="com.techouts.entities.Order" />
        <mapping class="com.techouts.entities.OrderItem" />
        <mapping class="com.techouts.entities.Product" />

    </session-factory>
</hibernate-configuration>